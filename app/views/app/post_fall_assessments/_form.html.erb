<%= simple_form_for([:app, @post_fall_assessment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, label: 'Assessment date' %>
    <%= f.association :resident, label_method: :full_name, prompt: "Choose a resident", collection: Resident.order(:first_name) %>

    <div class="form-group">
      <label>Author</label>
      <input class="form-control" type="text" placeholder="<%= @current_user.full_name %>" readonly value="<%= @post_fall_assessment.author.try(:full_name) %>">
    </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
