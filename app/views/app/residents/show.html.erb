


<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Resident name</h3>
        <div class="box-tools">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Action
            <span class="fa fa-caret-down"></span></button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="<%= edit_app_resident_path(@resident) %>">Edit</a></li>
            <li><a href="<%= app_resident_path(@resident) %>" data-confirm="Are you sure?" data-method="DELETE" >Delete</a></li>
          </ul>
        </div>
      </div>
      <div class="box-body">
        <p>
          <strong>First name:</strong>
          <%= @resident.first_name %>
        </p>

        <p>
          <strong>Last name:</strong>
          <%= @resident.last_name %>
        </p>

        <p>
          <strong>Date of birth:</strong>
          <%= @resident.date_of_birth %>
        </p>

        <p>
          <strong>Room:</strong>
          <%= @resident.room %>
        </p>

        <p>
          <strong>Status:</strong>
          <%= @resident.status %>
        </p>

        <p>
          <strong>Diagnosis summary:</strong><br>
          <%= raw(@resident.diagnosis_summary.gsub(/\n/, '<br />')) %>
        </p>

        <p>
          <strong>Admission date:</strong>
          <%= @resident.admission_date %>
        </p>

        <p>
          <strong>Permanent resident date:</strong>
          <%= @resident.permanent_resident_date %>
        </p>

        <p>
          <strong>Author:</strong>
          <%= @resident.author.try(:full_name) %>
        </p>


        </div>
      </div>
    </div>
  </div>
