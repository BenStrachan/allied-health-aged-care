<%= simple_form_for([:app, @resident]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth %>
    <%= f.input :room %>
    <%= f.input :status, collection: ['Respite', 'Permanent', 'Hospital'] %>
    <%= f.input :diagnosis_summary, as: :text, autofocus: true, :input_html => {:style => 'width: 100%', :rows => 5, class: 'response-project'}  %>
    <%= f.input :admission_date %>
    <%= f.input :permanent_resident_date %>

    <div class="form-group">
      <label>Author</label>
      <input class="form-control" type="text" placeholder="<%= @current_user.full_name %>" readonly value="<%= @resident.author.try(:full_name) %>">
    </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
