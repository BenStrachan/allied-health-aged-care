<section class="content-header">
  <h1>
    Residents
  </h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-header">
    <h3 class="box-title">Resident</h3>
      <div class="box-tools">
        <ul class="pull-right">
          <a href="<%= new_app_resident_path %>" class="btn btn-block btn-default btn-sm">New resident</a>
        </ul>
      </div>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date of birth</th>
            <th>Room</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @resident.each do |resident| %>
            <tr>
              <td><a href="<%= app_resident_path(resident) %>">
                <%= resident.last_name.upcase %>,
                <%= resident.first_name %>
              </a> </td>
              <td><%= resident.date_of_birth %></td>
              <td><%= resident.room %></td>
              <td><%= link_to 'Show', app_resident_path(resident) %></td>
              <td><%= link_to 'Edit', edit_app_resident_path(resident) %></td>
              <td><%= link_to 'Destroy', app_resident_path(resident), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
        <%= will_paginate @resident %>
      </div>
    </div>
  </div>
</section>
