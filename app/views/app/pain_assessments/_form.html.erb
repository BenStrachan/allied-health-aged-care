<%= simple_form_for([:app, @pain_assessment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>

    <div class="form-group">
      <label>Author</label>
      <input class="form-control" type="text" placeholder="<%= @current_user.full_name %>" readonly value="<%= @pain_assessment.author.try(:full_name) %>">
    </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
